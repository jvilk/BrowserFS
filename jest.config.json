{
	"preset": "ts-jest/presets/default-esm",
	"testEnvironment": "node",
	"extensionsToTreatAsEsm": [
		".ts"
	],
	"testMatch": [
		"./**/*.test.ts"
	],
	"moduleNameMapper": {
		"^(\\.{1,2}/.*)\\.js$": "$1"
	},
	"transform": {
		"^.+\\.ts$": [
			"ts-jest",
			{
				"tsconfig": "test/tsconfig.json",
				"useESM": true
			}
		]
	},
	"verbose": true
}